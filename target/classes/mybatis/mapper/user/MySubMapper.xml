<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.coffice.user.service.SubPaylmpl">

	<insert id="paymentInfo" parameterType="com.coffice.dto.SubPayDTO">
		INSERT INTO payment (pay_idx, mem_id, pay_import_key, sub_name, pay_price, pay_result_status, pay_successed_at, pay_case) VALUES 
			(#{pay_idx}, #{mem_id}, #{pay_import_key}, #{sub_name}, #{pay_price}, #{pay_result_status}, #{pay_successed_at}, #{pay_case})
	</insert>
	
	<select id="subList" resultType="com.coffice.dto.SubscriptionDTO">
		SELECT * FROM subscription ORDER BY sub_price ASC
	</select>
	
	<select id="user" resultType="com.coffice.dto.MemberDTO">
		SELECT * FROM member where mem_id = #{param1}
	</select>

